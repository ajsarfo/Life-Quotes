<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="binding"
            type="com.sarftec.lifequotes.presentation.binding.QuoteBinding" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/quote_item_card_height"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> binding.clicked()}"
            app:cardBackgroundColor="@color/color_toolbar"
            app:cardCornerRadius="@dimen/card_corner_size"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:gravity="center"
                        android:maxLines="7"
                        android:text="@{binding.message}"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="The green white fox jumped over the lazy fox" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/quote_item_margin_left_right"
                        android:layout_marginRight="@dimen/quote_item_margin_left_right"
                        android:background="@drawable/quote_item_shape"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> binding.onFavorite()}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/quote_item_bottom_icon_size"
                            android:layout_height="@dimen/quote_item_bottom_icon_size"
                            android:padding="@dimen/quote_item_icon_padding"
                            app:image="@{binding.favoriteIcon}"
                            tools:srcCompat="@drawable/ic_love_unfilled" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/quote_item_margin_left_right"
                        android:layout_marginRight="@dimen/quote_item_margin_left_right"
                        android:background="@drawable/quote_item_shape"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> binding.onShare()}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/quote_item_bottom_icon_size"
                            android:layout_height="@dimen/quote_item_bottom_icon_size"
                            android:padding="@dimen/quote_item_icon_padding"
                            app:srcCompat="@drawable/ic_share" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/quote_item_margin_left_right"
                        android:layout_marginRight="@dimen/quote_item_margin_left_right"
                        android:background="@drawable/quote_item_shape"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> binding.onCopy()}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/quote_item_bottom_icon_size"
                            android:layout_height="@dimen/quote_item_bottom_icon_size"
                            android:padding="@dimen/quote_item_icon_padding"
                            app:srcCompat="@drawable/ic_copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/quote_item_margin_left_right"
                        android:layout_marginRight="@dimen/quote_item_margin_left_right"
                        android:background="@drawable/quote_item_shape"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> binding.onSave()}">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/quote_item_bottom_icon_size"
                            android:layout_height="@dimen/quote_item_bottom_icon_size"
                            android:padding="@dimen/quote_item_icon_padding"
                            app:srcCompat="@drawable/ic_save" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>