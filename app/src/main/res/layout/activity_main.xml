<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/main_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginStart="@dimen/main_toolbar_left_right_margin"
                    android:layout_marginLeft="@dimen/main_toolbar_left_right_margin"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="@dimen/main_toolbar_left_right_margin"
                    android:layout_marginRight="@dimen/main_toolbar_left_right_margin"
                    android:background="@drawable/main_toolbar_shape"
                    app:elevation="@dimen/card_elevation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_menu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="54dp"
                        android:layout_marginRight="@dimen/main_toolbar_left_right_margin"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAppearance="@style/ToolbarTextAppearance"
                            android:textColor="@color/color_on_toolbar" />
                    </LinearLayout>
                </com.google.android.material.appbar.MaterialToolbar>

                <include
                    android:id="@+id/layout_first_section"
                    layout="@layout/layout_main_section"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_section_card_height"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintEnd_toStartOf="@+id/layout_second_section"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/main_toolbar"
                    app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

                <include
                    android:id="@+id/layout_second_section"
                    layout="@layout/layout_main_section"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_section_card_height"
                    app:layout_constraintEnd_toEndOf="@+id/main_toolbar"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/layout_first_section"
                    app:layout_constraintTop_toTopOf="@+id/layout_first_section" />

                <include
                    android:id="@+id/layout_today"
                    layout="@layout/layout_main_today_quote"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_today_quote_card_height"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/layout_palette"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/layout_first_section"
                    app:layout_constraintTop_toBottomOf="@+id/layout_first_section"
                    tools:layout_width="260dp" />

                <include
                    android:id="@+id/layout_palette"
                    layout="@layout/layout_main_palette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/layout_today"
                    app:layout_constraintEnd_toEndOf="@+id/layout_second_section"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/layout_today"
                    app:layout_constraintTop_toTopOf="@+id/layout_today" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.appodeal.ads.BannerView
            android:id="@+id/main_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            tools:layout_height="50dp"
            tools:background="@color/teal_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_on_toolbar"
        app:headerLayout="@layout/layout_drawer_header"
        app:itemIconTint="@color/background"
        app:itemTextColor="@color/background"
        app:menu="@menu/menu" />
</androidx.drawerlayout.widget.DrawerLayout>